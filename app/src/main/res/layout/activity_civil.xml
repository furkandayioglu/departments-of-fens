<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue_50"
    tools:context=".CivilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_margin="5dp"
        android:gravity="fill_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_civil_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:contentDescription="@string/civil_engineering"
            android:src="@mipmap/ic_launcher"
            app:srcCompat="@mipmap/civil"
            tools:srcCompat="@mipmap/civil" />

        <TextView
            android:id="@+id/tv_civil_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill|fill_horizontal"
            android:layout_margin="10dp"
            android:background="@color/material_blue_100"
            android:text="@string/civil_engineering_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|clip_vertical|fill"
            android:layout_margin="10dp"
            android:background="@color/material_blue_grey_200"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_civil_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/prev" />

            <Button
                android:id="@+id/btn_civil_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/next" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>